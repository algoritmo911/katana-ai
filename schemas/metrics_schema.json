{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Katana Metrics Log",
  "description": "Schema for Katana metrics logs.",
  "type": "object",
  "properties": {
    "trace_id": {
      "description": "Unique identifier for a trace, spanning multiple commands.",
      "type": "string",
      "format": "uuid"
    },
    "timestamp": {
      "description": "Timestamp of the event in ISO 8601 format.",
      "type": "string",
      "format": "date-time"
    },
    "name": {
      "description": "The name of the metric.",
      "type": "string"
    },
    "value": {
      "description": "The value of the metric.",
      "type": "number"
    },
    "tags": {
      "description": "A set of key-value pairs to associate with the metric.",
      "type": "object"
    }
  },
  "required": ["timestamp", "name", "value"]
}
